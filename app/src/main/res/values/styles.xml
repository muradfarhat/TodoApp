<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Page Sections Tittle Style-->
    <style name="PageSectionsTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/_30dp</item>
        <item name="android:textSize">@dimen/font_size_22sp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

<!--    See All Text Style-->
    <style name="SeeAllTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:textColor">@color/color_BA83DE</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

<!--    Time Text Style-->
    <style name="TimeTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_marginStart">@dimen/_15dp</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

<!--    Priority Buttons Style-->
    <style name="priorityBtnStyle" parent="android:Widget.ActionButton">
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/toggle_btn</item>
        <item name="android:textColor">@color/color_FACBBA</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

<!--    top page tittle-->
    <style name="pageTopTittleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_size_25sp</item>
    </style>
</resources>