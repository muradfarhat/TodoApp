<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Page Sections Tittle Style-->
    <style name="PageSectionsTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/_30dp</item>
        <item name="android:textSize">@dimen/font_size_22sp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

<!--    See All Text Style-->
    <style name="SeeAllTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:textColor">@color/color_BA83DE</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

<!--    Time Text Style-->
    <style name="TimeTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_marginStart">@dimen/_15dp</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

<!--    Priority Buttons Style-->
    <style name="priorityBtnStyle" parent="android:Widget.ActionButton">
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/toggle_btn</item>
        <item name="android:textColor">@color/color_FACBBA</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

<!--    top page tittle-->
    <style name="pageTopTittleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_size_25sp</item>
    </style>

<!--    Calender Text Style-->
    <style name="calenderTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">@dimen/font_size_15sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

<!--    Time picker style-->
    <style name="timePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_BA83DE</item>
    </style>

<!--    Search Edit Text-->
    <style name="searchEditText" parent="android:Widget.EditText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:hint">@string/search_hint_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
    </style>

<!--    Create Task Btns Style-->
    <style name="createTaskBtnStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_style_</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>